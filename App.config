<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <startup>
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
    
    <!-- Strings de Conexão -->
    <connectionStrings>
        <!-- Conexão principal com SQL Server usando autenticação Windows -->
        <add name="SistemaChamados" 
             connectionString="Server=localhost;Database=SistemaChamados;Integrated Security=true;Connection Timeout=30;" 
             providerName="System.Data.SqlClient" />
        
        <!-- Exemplo de conexão com usuário e senha SQL Server -->
        <!--
        <add name="SistemaChamados" 
             connectionString="Server=SEU_SERVIDOR;Database=SistemaChamados;User Id=SEU_USUARIO;Password=SUA_SENHA;Connection Timeout=30;" 
             providerName="System.Data.SqlClient" />
        -->
        
        <!-- Exemplo de conexão com SQL Server Express -->
        <!--
        <add name="SistemaChamados" 
             connectionString="Server=.\SQLEXPRESS;Database=SistemaChamados;Integrated Security=true;Connection Timeout=30;" 
             providerName="System.Data.SqlClient" />
        -->
    </connectionStrings>
    
    <!-- Configurações da Aplicação -->
    <appSettings>
        <!-- Configurações Gerais -->
        <add key="ApplicationName" value="Sistema de Chamados" />
        <add key="Version" value="1.0.0" />
        <add key="CompanyName" value="Sua Empresa Ltda" />
        
        <!-- Configurações de Segurança -->
        <add key="SessionTimeoutMinutes" value="30" />
        <add key="MaxLoginAttempts" value="3" />
        <add key="PasswordMinLength" value="6" />
        <add key="RequirePasswordComplexity" value="false" />
        
        <!-- Configurações de Log -->
        <add key="EnableLogging" value="true" />
        <add key="LogPath" value="C:\Logs\SistemaChamados\" />
        <add key="LogLevel" value="Info" /> <!-- Debug, Info, Warning, Error -->
        <add key="MaxLogFileSizeMB" value="10" />
        <add key="MaxLogFiles" value="30" />
        
        <!-- Configurações de Email (para notificações) -->
        <add key="EnableEmailNotifications" value="false" />
        <add key="SmtpServer" value="smtp.gmail.com" />
        <add key="SmtpPort" value="587" />
        <add key="SmtpEnableSsl" value="true" />
        <add key="EmailFrom" value="sistema@suaempresa.com" />
        <add key="EmailFromName" value="Sistema de Chamados" />
        <add key="EmailUsername" value="seu_email@gmail.com" />
        <add key="EmailPassword" value="sua_senha_app" />
        
        <!-- Configurações de Interface -->
        <add key="GridPageSize" value="50" />
        <add key="AutoRefreshSeconds" value="30" />
        <add key="SearchMinChars" value="3" />
        <add key="DefaultTheme" value="Light" /> <!-- Light, Dark -->
        
        <!-- Configurações de Backup -->
        <add key="EnableAutoBackup" value="false" />
        <add key="BackupPath" value="C:\Backup\SistemaChamados\" />
        <add key="BackupIntervalHours" value="24" />
        <add key="MaxBackupFiles" value="7" />
        
        <!-- Configurações de Performance -->
        <add key="ConnectionPoolSize" value="100" />
        <add key="CommandTimeout" value="30" />
        <add key="EnableQueryCache" value="true" />
        <add key="CacheExpirationMinutes" value="15" />
    </appSettings>
    
    <!-- Configurações do Sistema -->
    <system.diagnostics>
        <trace autoflush="true">
            <listeners>
                <add name="textWriterTraceListener" 
                     type="System.Diagnostics.TextWriterTraceListener" 
                     initializeData="C:\Logs\SistemaChamados\trace.log" />
            </listeners>
        </trace>
    </system.diagnostics>
    
    <!-- Configurações de Runtime -->
    <runtime>
        <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
            <!-- Redirecionamentos de assembly se necessário -->
        </assemblyBinding>
        
        <!-- Configurações de Garbage Collection -->
        <gcServer enabled="true" />
        <gcConcurrent enabled="true" />
    </runtime>
    
    <!-- Configurações de Rede (se necessário) -->
    <system.net>
        <defaultProxy enabled="false" />
        <settings>
            <httpWebRequest useUnsafeHeaderParsing="false" />
        </settings>
    </system.net>
</configuration>
